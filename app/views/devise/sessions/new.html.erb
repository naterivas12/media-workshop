<h2 class="heading text-center mb-4">Sign in to your account</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-column gap-4", data: { turbo: "false" } }) do |f| %>

  <%= input_email(f, :email, resource, placeholder: "username@mail.com", autofocus: true) %>
  <%= input_password(f, :password, resource, placeholder: "******") %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>


  <%= f.submit "Log in", class: "button button--primary full-width" %>

<% end %>

<%= render "devise/shared/links" %>
